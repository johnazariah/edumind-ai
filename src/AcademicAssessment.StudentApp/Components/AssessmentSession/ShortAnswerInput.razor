<div class="short-answer-input">
    <label class="form-label fw-semibold">Your Response</label>
    <input class="form-control" value="@Value" placeholder="@Placeholder" @oninput="HandleInput" disabled="@Disabled" />
    <div class="form-text text-end">@Value.Length characters</div>
</div>

@code {
    [Parameter]
    public string Value { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    [Parameter]
    public string Placeholder { get; set; } = "Type your answer";

    [Parameter]
    public bool Disabled { get; set; }

    private Task HandleInput(ChangeEventArgs args)
    {
        if (Disabled)
        {
            return Task.CompletedTask;
        }

        var incoming = args.Value?.ToString() ?? string.Empty;
        Value = incoming;
        return ValueChanged.InvokeAsync(incoming);
    }
}