@page "/assessment/{AssessmentId:guid}"
@rendermode InteractiveServer
@using AcademicAssessment.Core.Models.Dtos
@using AcademicAssessment.StudentApp.Components.Shared

@if (isLoading)
{
    <div class="d-flex align-items-center gap-2 text-muted">
        <div class="spinner-border spinner-border-sm" role="status"></div>
        <span>Loading assessment...</span>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
else if (assessment is null)
{
    <div class="alert alert-warning" role="alert">
        The assessment could not be found. Please return to the <a href="/assessments">dashboard</a> and try again.
    </div>
}
else
{
    <AssessmentNavigation CurrentTitle="@assessment.Title" CurrentStep="1" TotalSteps="3"
        OnSaveAndExit="SaveAndExitAsync" />

    <div class="row g-4">
        <div class="col-lg-8">
            <section class="card shadow-sm h-100">
                <div class="card-body">
                    <h2 class="card-title mb-3">@assessment.Title</h2>
                    <p class="text-muted mb-4">@assessment.Subject Â· @assessment.Difficulty</p>

                    @if (!string.IsNullOrWhiteSpace(assessment.Description))
                    {
                        <p class="mb-4">@assessment.Description</p>
                    }

                    <h4 class="h5">Learning Objectives</h4>
                    @if (assessment.LearningObjectives.Count == 0)
                    {
                        <p class="text-muted">Learning objectives will appear here once published.</p>
                    }
                    else
                    {
                        <ul>
                            @foreach (var objective in assessment.LearningObjectives)
                            {
                                <li>@objective</li>
                            }
                        </ul>
                    }

                    <h4 class="h5 mt-4">Historical Attempts</h4>
                    @if (assessment.LastAttemptedAt is null)
                    {
                        <p class="text-muted">No previous attempts yet. You will see your progress and feedback after completing
                            this assessment.</p>
                    }
                    else
                    {
                        <p class="text-muted">Last attempted @FormatLastAttempted(assessment.LastAttemptedAt).</p>
                        @if (assessment.ProgressPercentage is double progress)
                        {
                            <div class="mt-3">
                                <div class="d-flex justify-content-between small text-muted">
                                    <span>Saved Progress</span>
                                    <span>@ToPercent(progress)%</span>
                                </div>
                                <div class="progress" role="progressbar" aria-valuemin="0" aria-valuemax="100"
                                    aria-valuenow="@ToPercent(progress)">
                                    <div class="progress-bar" style="width: @ToPercent(progress)%"></div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>
        </div>

        <div class="col-lg-4">
            <aside class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column gap-3">
                    <h5 class="card-title">Assessment Summary</h5>
                    <div class="d-flex justify-content-between">
                        <span>Estimated Time</span>
                        <strong>@assessment.EstimatedDurationMinutes minutes</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Question Count</span>
                        <strong>@assessment.QuestionCount</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Status</span>
                        <span class="badge @(assessment.IsInProgress ? "bg-warning text-dark" : "bg-success")">
                            @(assessment.IsInProgress ? "In Progress" : "Not Started")
                        </span>
                    </div>
                    <a href="/assessment/@AssessmentId/session" class="btn btn-success w-100 mt-2">Start Assessment</a>
                    <button class="btn btn-outline-secondary w-100" @onclick="SaveAndExitAsync" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save & Exit</span>
                        }
                    </button>
                </div>
            </aside>
        </div>
    </div>
}