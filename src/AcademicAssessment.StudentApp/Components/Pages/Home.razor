@page "/"
@inject NavigationManager Navigation

<PageTitle>EduMind.AI - Student Portal</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">🎓 Welcome to EduMind.AI</h1>
            <p class="lead mb-4">Your AI-powered academic assessment platform</p>

            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h3 class="card-title mb-4">Ready to start learning?</h3>
                    <p class="card-text mb-4">
                        Access your personalized assessments powered by advanced AI.
                        Get instant feedback and track your academic progress.
                    </p>
                    <a href="/assessments" class="btn btn-primary btn-lg">
                        <i class="fas fa-play-circle me-2"></i>
                        Start Assessments
                    </a>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="fs-1 text-primary">🤖</div>
                        <h5>AI-Powered</h5>
                        <p class="text-muted">Advanced AI provides personalized feedback and adaptive questioning</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="fs-1 text-success">📊</div>
                        <h5>Track Progress</h5>
                        <p class="text-muted">Monitor your learning journey with detailed analytics</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="fs-1 text-info">⚡</div>
                        <h5>Instant Results</h5>
                        <p class="text-muted">Get immediate feedback and recommendations</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToAssessments()
    {
        Navigation.NavigateTo("/assessments");
    }
}